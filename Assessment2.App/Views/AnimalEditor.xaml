<Window x:Class="Assessment2.App.Views.AnimalEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Assessment2.App.ViewModels"
        Title="Animal Editor" Height="450" Width="750"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:AnimalViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0"
                  ItemsSource="{Binding Animals}"
                  SelectedItem="{Binding SelectedAnimal, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  Margin="0 0 0 10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*" />
                <DataGridTextColumn Header="Sex" Binding="{Binding Sex}" Width="*" />
                <DataGridTextColumn Header="Owner ID" Binding="{Binding OwnerId}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <ComboBox Width="150" Margin="0,0,10,0"
                      ItemsSource="{Binding Customers}"
                      DisplayMemberPath="Surname"
                      SelectedItem="{Binding SelectedCustomer}" />
            <Button Content="Add" Command="{Binding AddAnimalCommand}" Width="80" Margin="0,0,10,0"/>
            <Button Content="Edit" Command="{Binding EditAnimalCommand}" Width="80" Margin="0,0,10,0"/>
            <Button Content="Delete" Command="{Binding DeleteAnimalCommand}" Width="80"/>
        </StackPanel>
    </Grid>
</Window>
